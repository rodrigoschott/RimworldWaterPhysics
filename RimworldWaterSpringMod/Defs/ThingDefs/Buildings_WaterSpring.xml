<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>WaterSpring</defName>
    <label>water spring</label>
    <description>A natural source of water that generates flowing water over time.</description>
    <thingClass>WaterSpringMod.WaterSpring.Building_WaterSpring</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/WaterSpring</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>1</Beauty>
      <Mass>20</Mass>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(1,1)</size>
    <designationCategory>Misc</designationCategory>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <constructEffect>ConstructMetal</constructEffect>
    <terrainAffordanceNeeded IsNull="True" />
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <building>
      <isEdifice>true</isEdifice>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <modExtensions>
      <li Class="WaterSpringMod.WaterSpring.SpringSettingsExtension">
        <spawnInterval>120</spawnInterval>
        <backlogCap>7</backlogCap>
      </li>
    </modExtensions>
  </ThingDef>

