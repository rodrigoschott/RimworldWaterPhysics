<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Floodgate: toggleable gate that blocks or allows water flow and pawn passage -->
  <ThingDef ParentName="BuildingBase">
    <defName>WS_Floodgate</defName>
    <label>floodgate</label>
    <description>A manually operated gate that can be opened or closed to control water flow. When closed, it blocks both water and pawns. When open, water and pawns pass freely. A colonist must flip the switch to toggle it.</description>
    <category>Building</category>
    <thingClass>WaterSpringMod.WaterSpring.Building_WaterFloodgate</thingClass>
    <building>
      <isEdifice>true</isEdifice>
      <canPlaceOverWall>true</canPlaceOverWall>
      <soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
      <soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
      <soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
      <blueprintClass>Blueprint_Door</blueprintClass>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <altitudeLayer>DoorMoveable</altitudeLayer>
    <selectable>true</selectable>
    <rotatable>false</rotatable>
    <size>(1,1)</size>
    <fillPercent>1</fillPercent>
    <holdsRoof>true</holdsRoof>
    <blockLight>true</blockLight>
    <blockWind>true</blockWind>
    <coversFloor>true</coversFloor>
    <canOverlapZones>false</canOverlapZones>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <designationCategory>Structure</designationCategory>
    <terrainAffordanceNeeded IsNull="True" />
    <costList>
      <Steel>25</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <WorkToBuild>600</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <graphicData>
      <texPath>Things/Building/Door/DoorSimple_Mover</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>WS_Lever</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
  </ThingDef>

</Defs>
