<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <AssemblyName>WaterSpringMod</AssemblyName>
    <RootNamespace>WaterSpringMod</RootNamespace>
    <LangVersion>latest</LangVersion>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  <Deterministic>true</Deterministic>
  <WarningLevel>4</WarningLevel>
    <Nullable>annotations</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\Assemblies\</OutputPath>
    <DefineConstants>DEBUG;TRACE;WATERPHYSICS_VERBOSE;WATERPHYSICS_DEV</DefineConstants>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\Assemblies\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <Optimize>true</Optimize>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.6.4566" />
    <PackageReference Include="Lib.Harmony" Version="2.2.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <!-- MultiFloors soft dependency: compile-time reference, NOT copied to output.
       Mono lazy JIT ensures MF types are only resolved when methods are actually called.
       All MF-referencing code is behind MultiFloorsIntegration.IsAvailable guard. -->
  <ItemGroup>
    <Reference Include="MultiFloors">
      <HintPath>..\..\Reference\1.6\Assemblies\MultiFloors.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="0PrepatcherAPI">
      <HintPath>..\..\Reference\1.6\Assemblies\0PrepatcherAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="WaterSpringMod.cs" />
    <Compile Remove="WaterSpring\\WaterTransferManager.cs" />
    <Compile Remove="WaterSpring\\Legacy\\**\*.cs" />
  </ItemGroup>

</Project>