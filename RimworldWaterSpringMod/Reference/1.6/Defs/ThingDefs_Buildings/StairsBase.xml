<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Name="MF_StairEntranceBase" ParentName="BuildingBase" Abstract="True">
		<defName>MF_StairEntranceBase</defName>
		<label>stair entrance</label>
		<description>Placeholder.</description>
		<size>(1,1)</size>
		<useHitPoints>false</useHitPoints>
		<thingClass>MultiFloors.StairEntrance</thingClass>
		<neverMultiSelect>true</neverMultiSelect>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<canOverlapZones>false</canOverlapZones>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<!-- light source around it -->
		<holdsRoof>true</holdsRoof>
		<fillPercent>0.75</fillPercent>
		<preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
		<building>
			<paintable>true</paintable>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<expandHomeArea>false</expandHomeArea>
			<!-- for transfer settings, like stockpile -->
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter/>
			</defaultStorageSettings>
		</building>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<inspectorTabs>
			<li>MultiFloors.ITab_ThingsToTransfer</li>
			<li>MultiFloors.ITab_PowerTransmission</li>
			<li>MultiFloors.ITab_StairTransferSetting</li>
			<li>MultiFloors.ITab_StairTransferPolicy</li>
		</inspectorTabs>
		<designationCategory>MultiFloors</designationCategory>
		<uiOrder>3000</uiOrder>
		<comps>
			<!-- transmit power to linked stairs -->
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<showPowerNeededIfOff>false</showPowerNeededIfOff>
			</li>
			<li>
				<compClass>MultiFloors.CompGatherPawns</compClass>
			</li>
		</comps>
	</ThingDef>
	<ThingDef Name="MF_StairExitBase" ParentName="BuildingBase"  Abstract="True">
		<defName>MF_StairExitBase</defName>
		<label>stair exit</label>
		<description>Placeholder.</description>
		<size>(1,1)</size>
		<useHitPoints>false</useHitPoints>
		<thingClass>MultiFloors.StairExit</thingClass>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<neverMultiSelect>true</neverMultiSelect>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<canOverlapZones>true</canOverlapZones>
		<!-- should only spawn and despawn by entrance -->
		<destroyable>false</destroyable>
		<fillPercent>0.75</fillPercent>
		<passability>PassThroughOnly</passability>
		<preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
		<building>
			<paintable>true</paintable>
			<deconstructible>false</deconstructible>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<expandHomeArea>false</expandHomeArea>
			<!-- for transfer settings, like stockpile -->
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter/>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>MultiFloors.ITab_ThingsToTransfer</li>
			<li>MultiFloors.ITab_PowerTransmission</li>
			<li>MultiFloors.ITab_StairTransferSetting</li>
			<li>MultiFloors.ITab_StairTransferPolicy</li>
		</inspectorTabs>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<comps>
			<!-- transmit power to linked stairs -->
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<showPowerNeededIfOff>false</showPowerNeededIfOff>
			</li>
			<li>
				<compClass>MultiFloors.CompGatherPawns</compClass>
			</li>
		</comps>
	</ThingDef>
</Defs>