<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef Name="MF_HandrailStairsSUpBaseA" ParentName="MF_StairEntranceBase" Abstract="True">
		<description>Narrow stairs with a simple handrail for ascending. Requires an indoor, roofed room. Cannot be built underground.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>MultiFloors/Buildings/HandrailStairsSmall/HandrailStairsSUp</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
			<drawOffsetNorth>(0, 0, 0.08)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, -0.17)</drawOffsetSouth>
			<drawOffsetWest>(-0.15, 0, 0.5)</drawOffsetWest>
			<drawOffsetEast>(0.15, 0, 0.5)</drawOffsetEast>
		</graphicData>
	</ThingDef>
	
	<ThingDef ParentName="MF_HandrailStairsSUpBaseA">
		<defName>MF_HandrailStairsSUpA</defName>
		<label>Z-shaped small handrail stairs up</label>
		<uiOrder>3040</uiOrder>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<isUpstairs>true</isUpstairs>
					<connectedToExitDef>MF_HandrailStairsSExitA</connectedToExitDef>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_HandrailStairsSUpBaseA">
		<defName>MF_HandrailStairsSUpAFlipped</defName>
		<label>small handrail stairs up</label>
		<uiOrder>3041</uiOrder>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<isUpstairs>true</isUpstairs>
					<connectedToExitDef>MF_HandrailStairsSExitAFlipped</connectedToExitDef>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	
	<ThingDef Name="MF_HandrailStairsSDownBaseA" ParentName="MF_StairEntranceBase" Abstract="True">
		<defName>MF_HandrailStairsSDownA</defName>
		<label>small handrail stairs down</label>
		<description>Narrow stairs with a simple handrail leading down. Cannot be built on upper levels.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>MultiFloors/Buildings/HandrailStairsSmall/HandrailStairsSDown</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
			<drawOffsetNorth>(0, 0, 0)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0.1)</drawOffsetSouth>
			<drawOffsetWest>(0.25, 0, -0.15)</drawOffsetWest>
			<drawOffsetEast>(-0.25, 0, -0.15)</drawOffsetEast>
		</graphicData>
	</ThingDef>
	
	<ThingDef ParentName="MF_HandrailStairsSDownBaseA">
		<defName>MF_HandrailStairsSDownA</defName>
		<label>Z-shaped small handrail stairs down</label>
		<uiOrder>3042</uiOrder>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<isUpstairs>false</isUpstairs>
					<connectedToExitDef>MF_HandrailStairsSExitA</connectedToExitDef>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	
	<ThingDef ParentName="MF_HandrailStairsSDownBaseA">
		<defName>MF_HandrailStairsSDownAFlipped</defName>
		<label>small handrail stairs down</label>
		<uiOrder>3043</uiOrder>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<isUpstairs>false</isUpstairs>
					<connectedToExitDef>MF_HandrailStairsSExitAFlipped</connectedToExitDef>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	
	<ThingDef Name="MF_HandrailStairsSExitBaseA" ParentName="MF_StairExitBase" Abstract="True">
		<label>small handrail stairs exit</label>
		<description>The endpoint of a small handrail stairs.</description>
		<rotatable>true</rotatable>
		<size>(1, 2)</size>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<graphicData>
			<graphicClass>Graphic_Multi</graphicClass>
			<texPath>MultiFloors/Buildings/HandrailStairsSmall/HandrailStairsSUp</texPath>
			<drawSize>(2.2, 2.2)</drawSize>
		</graphicData>
	</ThingDef>
	
	<!-- default as Z-shaped stairs -->
	<ThingDef ParentName="MF_HandrailStairsSExitBaseA">
		<defName>MF_HandrailStairsSExitA</defName>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<upstairsEntranceDef>MF_HandrailStairsSUpA</upstairsEntranceDef>
					<downstairsEntranceDef>MF_HandrailStairsSDownA</downstairsEntranceDef>
					<oppositeRotWithEntrance>true</oppositeRotWithEntrance>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="MF_HandrailStairsSExitBaseA">
		<defName>MF_HandrailStairsSExitAFlipped</defName>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<stairsSettings>
					<upstairsEntranceDef>MF_HandrailStairsSUpAFlipped</upstairsEntranceDef>
					<downstairsEntranceDef>MF_HandrailStairsSDownAFlipped</downstairsEntranceDef>
				</stairsSettings>
			</li>
		</modExtensions>
	</ThingDef>
	
</Defs>