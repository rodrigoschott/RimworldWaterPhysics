<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="MF_ElevatorBase">
		<defName>MF_ModernElevatorA</defName>
		<label>modern elevator</label>
		<description>A sleek, efficient lift with advanced engineering. Rapid and smooth.</description>
		<size>(3, 3)</size>
		<uiIconPath>MultiFloors/Buildings/ModernElevator/ModernElevatorMovingAIcon</uiIconPath>
		<uiIconScale>1.25</uiIconScale>
		<uiIconOffset>(0, -0.08)</uiIconOffset>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>MultiFloors/Buildings/ModernElevator/ModernElevatorA</texPath>
			<drawSize>(5, 5)</drawSize>
			<drawOffset>(0, 0, 0)</drawOffset>
			<color>(150, 150, 150)</color>
		</graphicData>
		<thingClass>MultiFloors.ModernElevator</thingClass>
		<designationCategory>MultiFloors</designationCategory>
		<researchPrerequisites>
      		<li>Electricity</li>
    	</researchPrerequisites>
		<statBases>
			<WorkToBuild>3000</WorkToBuild>
		</statBases>
		<costList>
			<ComponentIndustrial>4</ComponentIndustrial>
      		<Steel>150</Steel>
		</costList>
		<uiOrder>3130</uiOrder>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>150</basePowerConsumption>
				<showPowerNeededIfOff>true</showPowerNeededIfOff>
			</li>
		</comps>
		<modExtensions>
			<li Class="MultiFloors.StairsModExtension">
				<elevatorSettings>
					<moverGraphic>
						<texPath>MultiFloors/Buildings/ModernElevator/ModernElevatorMovingA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- a higher y to make it cover the shaft -->
						<!-- z should be the same as the frame to make them aligned -->
						<drawOffset>(0, 0.01, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<color>(150, 150, 150)</color>
					</moverGraphic>
					<frontGraphic>
						<texPath>MultiFloors/Buildings/ModernElevator/ModernElevatorFrontA</texPath>
						<drawSize>(5, 5)</drawSize>
						<!-- make it always above the moving part -->
						<drawOffset>(0, 0.2, 0)</drawOffset>
						<graphicClass>Graphic_Single</graphicClass>
						<color>(150, 150, 150)</color>
					</frontGraphic>
					<appearingDuration>30</appearingDuration>
					<switchingDuration>70</switchingDuration>
				</elevatorSettings>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>